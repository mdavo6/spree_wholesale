<% if Spree::Config[:allow_currency_change] && Spree::Config[:show_currency_selector] && supported_currencies.size > 1 %>
  <div id="currency-select" data-hook class="panel panel-default">
    <div class="panel-heading">
      <h1 class="panel-title"><%= Spree.t(:order_currency) %></h1>
    </div>
    <div class="panel-body">
      <%= form_tag currency_admin_order_path(format: :html), class: 'navbar-form' do %>
        <div class="form-group">
          <label for="currency" class="sr-only"><%= Spree.t(:currency) %></label>
          <%= select_tag(:currency, options_for_select(supported_currencies, @order.currency), class: 'form-control', data: { href: currency_admin_order_path(format: :json) }) %>
          <noscript><%= submit_tag %></noscript>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
